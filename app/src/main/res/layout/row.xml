<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_margin="5dp"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardBackgroundColor="#2E2E32">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/character_image"
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                card_view:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/full_name"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/character_image"
                android:text="CharacterName"
                android:textColor="#F4F2F2"
                android:textSize="22dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/pick_1"
                android:layout_width="147dp"
                android:layout_height="38dp"
                android:layout_below="@+id/full_name"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/character_image"
                android:text="CharacterPick"
                android:textSize="20dp"
                android:textColor="#F4F6F5"/>

            <TextView
                android:id="@+id/char_ID"
                android:layout_width="122dp"
                android:layout_height="31dp"
                android:layout_below="@+id/full_name"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/pick_1"
                android:text="CharID"
                android:textSize="20dp"
                android:textColor="#F4F6F5"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>